<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.dazhongtucao.ReplyActivity" >

    <RelativeLayout
        android:id="@+id/rl_reply_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/lightTheme" >

        <TextView
            android:id="@+id/tv_reply_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="返回"
            android:textColor="@drawable/color_selector_orange_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_reply_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="发送"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="回复"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_reply_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_emotion" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_picture" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_location" />
        </LinearLayout>
    </LinearLayout>
    
    <EditText 
        android:id="@+id/et_reply_tucao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_reply_title"
        android:layout_above="@id/ll_reply_bottom"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:hint="你想回复什么呢..."
        android:gravity="left|top" />

</RelativeLayout>